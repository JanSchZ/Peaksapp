{
  "extends": "@peaks/config/tsconfig",
  "compilerOptions": {
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "plugins": [{ "name": "next" }],
    "paths": {
      "@/*": ["./src/*"],
      "@peaks/ui": ["../../packages/ui/src"],
      "@peaks/core": ["../../packages/core/src"]
    }
  },
  "include": [
    "next-env.d.ts",
    "src/**/*",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
