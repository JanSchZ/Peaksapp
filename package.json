{
  "name": "peaksapp",
  "private": true,
  "version": "0.1.0",
  "description": "Peaks platform monorepo (web, mobile, shared packages)",
  "packageManager": "npm@10.9.0",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "test": "turbo test",
    "clean": "turbo clean",
    "db:generate": "turbo run generate --filter=@peaks/core",
    "db:migrate": "turbo run migrate --filter=@peaks/core",
    "db:push": "turbo run push --filter=@peaks/core"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@peaks/config": "file:packages/config",
    "ajv": "^8.17.1",
    "drizzle-kit": "^0.31.6",
    "eslint-config-expo": "^10.0.0",
    "turbo": "^2.1.1"
  },
  "dependencies": {
    "tailwindcss": "^4.1.17"
  }
}
